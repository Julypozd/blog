    <title>VolunteerDelivery</title>
  </head>
  <body>
<!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container">
      <a class="navbar-brand" href=home>VolunteerDelivery</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="http://localhost:3000/home">HOME<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="http://localhost:3000/about">ABOUT</a> <span class="sr-only">(current)</span></a>
        </li>

    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href=pages id="PageDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          VolunteerDelivery
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="customers/new">I need delivery</a>
          <a class="dropdown-item" href="drivers/new">I can help</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="http://localhost:3000/about">About us</a>
        </div>
      </li>
    </ul>
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-light my-2 my-sm-0 " type="submit">Search</button>
    </form>   
  </div>
</div>
</nav>

<p id="notice"><%= notice %></p>

<div class="container mt-5">
  

      <div class="col-sm mb-3 text-sm-center">
        <h3  mb-3>About a driver:</h3>
        
        <img class="mb-5 img-fluid rounded-circle" src="/assets/delivery.jpg" alt="I can help" width="300" height=auto /img>

<p>
  <strong>First name:</strong>
  <%= @driver.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @driver.last_name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @driver.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @driver.email %>
</p>

<p>
  <% if @driver.customers.present? %>
  <strong>Customers:</strong> 
    <%= @driver.customers.each do |customer| %>
    <%= customer.first_name %>
    <%= customer.last_name %>
    <% end %>
<% end %>
</p>

<%= link_to 'Edit', edit_driver_path(@driver) %> |
<%= link_to 'Back', drivers_path %>
</div>
</div>

<hr> 
    <div class="row py-8 text-muted">
  <div class="col-md">
    <p><strong>About VolunteerDelivery</strong></p>
    <p>Our mission is to help seniors and individuals with disabilities maintain their independence and continue living in their homes.</p>
  </div>
  <div class="col-md">
    <p><strong>Contact us</strong></p>
    <div class="input-group">
      <input type="text" class="form-control" placeholder="Email">
      <span class="input-group-btn">    
    <button type="button" class="btn btn-success">Sign up</button>
      </span>
    </div>
  </div>
</div>
</body>
