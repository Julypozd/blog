<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<div id="comments">
	<% if @post.comments.present? %>
	   <h3>Comments:</h3>
	   <% end %>
     <%= render @post.comments %>
      <h4>Add a Comment:</h4>
  <%= render partial: "comments/form", locals: {comment: @post.comments.new} %>
</div>
<br></br>
<%= link_to 'Edit', edit_post_path(@post) %> 
<%= link_to 'Back', posts_path %>